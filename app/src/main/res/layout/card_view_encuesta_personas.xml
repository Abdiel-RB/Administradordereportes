<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_usuarios_view"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#F53E7AA8"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_usuario_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFE9F5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/numeroEncuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textSize="30dp"
                android:background="@color/white"
                android:textColor="#039BE5"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/textViewFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="fecha y hora"
                android:textColor="#E12144F6"
                android:textStyle="bold" />


        </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="1._¿Cuantos servicios tecnicos o profesionales ha solicitado a domiciliio?"
                android:textColor="#464849"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewPregunta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:textSize="18dp"
                android:text="1"
                android:textColor="#FD255B9C"
                android:backgroundTint="#BDB6BF"
                android:textStyle="italic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:text="2._¿Podría mencionarlos?"
                android:textColor="#464849"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewPregunta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Payaso"
                android:textColor="#FD255B9C"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:civ_border_color="#3F51B5"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/black"
                app:srcCompat="@mipmap/ic_launcher_round" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="3._¿Cuál es el servicio más solicitado en el mes?:"
                        android:textColor="#464849"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPregunta3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:text="7472856410"
                        android:textColor="#FD255B9C"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:text="4._¿Usted ofrece servicio a domicilio?"
                        android:textColor="#464849"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPregunta4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:text="No"
                        android:textColor="#FD255B9C"
                        android:textStyle="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:text="5._¿Utiliza alguna red social?"
                        android:textColor="#464849"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPregunta5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:text="Si"
                        android:textColor="#FD255B9C"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:text="6._¿Que aplicacion de servicio a domicilio utiliza?"
                        android:textColor="#464849"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPregunta6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:text="rappi"
                        android:textColor="#FD255B9C"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:text="7._¿Cual es su edad?"
                        android:textColor="#464849"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPregunta7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:text="35"
                        android:textColor="#FD255B9C"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:text="8._¿Usted tiene casa propia?"
                        android:textColor="#464849"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewPregunta8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:text="Si"
                        android:textColor="#FD255B9C"
                        android:textStyle="italic" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:layout_margin="10dp"
            android:backgroundTint="#959191" />

    </LinearLayout>




</androidx.cardview.widget.CardView>